<Window x:Class="WpfAppEXAM.EditReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppEXAM"
        mc:Ignorable="d"
        Title="EditReservationWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Дата початку:"/>
            <DatePicker Name="DateFromPicker" />
            <TextBlock Text="Час початку (HH:MM:SS):"/>
            <TextBox Name="TimeFromPicker"  />

            <TextBlock Text="Дата завершення:"/>
            <DatePicker Name="DateToPicker" />
            <TextBlock Text="Час завершення (HH:MM:SS):"/>
            <TextBox Name="TimeToPicker"  />

            <Button Name="SaveButton" Content="Зберегти" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
