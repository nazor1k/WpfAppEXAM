<Window x:Class="WpfAppEXAM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppEXAM"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400" >
    <Grid>
        <StackPanel Margin="20 30">
            <Label Content="Login" />
            <TextBox Name="Name"></TextBox>

            <Label Content="Password" />
            <PasswordBox Name="Password"/>

            <Grid  Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <Button Name="Login" Grid.Column="0" Width="100" Height="30" Content="Ввійти" Click="Login_Click"></Button>
                <Button Name="Registration" Grid.Column="1" Width="100" Height="30" Content="Реєстрація" Click="Registration_Click"   ></Button>

            </Grid>
        </StackPanel>
    </Grid>
</Window>
